---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "",
    "url": "",
    "name": "Contact Us | ",
    "description":
      "Need help or want to kick off a project in Girona? Get in touch! We're ready to create the ideal solution using Gironas local expertise and services.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://screwfast.uk",
      "name": "ScrewFast",
      "description":
        "",
    },
    "inLanguage": "en-ES"
  }}
>
  <ContactSection />
</MainLayout>
